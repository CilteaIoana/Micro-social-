<a class="btn btn-info mt-3 mb-3 " href ="/Articles/New">Add article</a>
@if (ViewBag.Msg != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Msg
    </div>
  
}
@foreach (var article in ViewBag.Articles)
{
    <div class="card" >
        @* <img src="..." class="card-img-top" alt="..."> *@
        <div class="card-body">

            <h3 class="card-title py-3 px-3 rounded-2" style="background-color:#9370db"><i class="bi bi-rainbow"></i>@article.Title</h3>
            <div class="card-text">@article.Content</div>
            <div class="d-flex flex-row justify-content-between mt-5 ">
                
                <a class="btn btn-outline-info" href="/Articles/Show/@article.Id">See article</a>
                <div><i class="bi bi-person"></i> @article.User.UserName</div>
                <span>@article.Date</span>
           </div>
        </div>
    </div>
    <br />
    <br />
}